// Import all partials
@require './_*.styl'

body
  color: color4
  background: color3
  max-width: 2000px;
  padding-bottom: 10em

main
  margin: 0 auto
  max-width: 90%
  text-align: left

ul
  margin: 0
  padding: 0

h2
  animation: fadein 1.5s;

section
  margin-top: 4rem

header.mainHeader
  border-bottom: 1px solid color4
  // margin-bottom: 4rem
  h1
    font-size 4rem
    margin-top: 2rem
    text-align: left
    margin-bottom: 1rem;
    a
      color: color4
      text-decoration none
      &:focus
        outline 0

Link
  cursor: pointer

.gallery-container
  margin: 0 auto;
  max-width: 80%;
  margin-top: 4em;

@keyframes fadein {
    from { opacity: 0; scale: 0.5; }
    to   { opacity: 1; scale:1; }
}

@media (max-width: 600px)

  .gallery-container
    margin: 0;
    max-width: 100%;
    margin-top: 4em;
